using System;

public class program
{
	public static void Main() 
	{
	float prinumero;
float segnumero;
		float suma;
		float resta;
		float multiplica;
		float division;
		
		Console.WriteLine("Ingrese el primer número");
		prinumero = Convert.ToSingle(Console.ReadLine());
		
		Console.WriteLine("Ingrese el segundo número");
		segnumero = Convert.ToSingle(Console.ReadLine());
		
		multiplica = prinumero * segnumero;
		suma = prinumero + segnumero;
		resta = prinumero - segnumero;
		division = prinumero / segnumero;
		
		Console.WriteLine(" El resultado esperado es: ");
		Console.WriteLine(" {0} X {1}  = {2}", 
		prinumero, segnumero, multiplica);
		Console.WriteLine(" {0} + {1}  = {2}",
		prinumero, segnumero, suma);
		Console.WriteLine(" {0} - {1}  = {2}",
		prinumero, segnumero, resta);
		Console.WriteLine(" {0} / {1}  = {2}",
		prinumero, segnumero, division);

	}
}
						  
